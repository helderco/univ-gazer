
{% block field_label %}
{% spaceless %}
    <label for="{{ id }}">{{ id|trans }}</label>
{% endspaceless %}
{% endblock field_label %}


{# We need to override the labels to be placeholders because of the theme we're using #}

{% block field_rows %}
{% spaceless %}
    {{ form_errors(form) }}
    {% for child in form %}
        {{ form_row(child) }}
    {% endfor %}
{% endspaceless %}
{% endblock field_rows %}

{% block field_row %}
{% spaceless %}
    {{ form_errors(form) }}
    {{ form_widget(form) }}
{% endspaceless %}
{% endblock field_row %}

{% block field_widget %}
{% spaceless %}
    {% set type = type|default('text') %}
    <input type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %} placeholder="{{ id|trans }}..." />
{% endspaceless %}
{% endblock field_widget %}

{% block textarea_widget %}
{% spaceless %}
    <textarea {{ block('widget_attributes') }} placeholder="{{ id|trans }}...">{{ value }}</textarea>
{% endspaceless %}
{% endblock textarea_widget %}

{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
    <div class="form_errors">
        {{ block('field_errors') }}
    </div>
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}

{% block field_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
    <ul class="error">
        {% for error in errors %}
            <li>{{ error.messageTemplate|trans(error.messageParameters, 'validators') }}</li>
        {% endfor %}
    </ul>
    {% endif %}
{% endspaceless %}
{% endblock field_errors %}
