{% extends "FOSUserBundle::layout.html.twig" %}

{# We need to override some blocks because for this form, the errors must be output outside of it #}
{% form_theme form theme _self %}

{% block form_widget %}
{% spaceless %}
    {{ block('field_rows') }}
    {{ form_rest(form) }}
{% endspaceless %}
{% endblock form_widget %}

{% block field_rows %}
{% spaceless %}
    {% for child in form %}
        {{ form_row(child) }}
    {% endfor %}
{% endspaceless %}
{% endblock field_rows %}

{% block field_row %}
{% spaceless %}
    {{ form_widget(form) }}
{% endspaceless %}
{% endblock field_row %}

{% block drop_content %}
    {% set _errors = [] %}

    {# Find global form errors #}
    {% for error in form.vars.errors %}
        {% set _errors = _errors|merge([error.messageTemplate|trans(error.messageParameters, 'validators')]) %}
    {% endfor %}

    {# Find field errors #}
    {% for child in form %}

        {% for child2 in child %}
            {% for error in child2.vars.errors %}
                {% set _errors = _errors|merge([child2.vars.id|trans({}, 'FOSUserBundle') ~ ': ' ~ error.messageTemplate|trans(error.messageParameters, 'validators')]) %}
            {% endfor %}
        {% endfor %}

        {% for error in child.vars.errors %}
            {% set _errors = _errors|merge([child.vars.id|trans({}, 'FOSUserBundle') ~ ': ' ~ error.messageTemplate|trans(error.messageParameters, 'validators')]) %}
        {% endfor %}
    {% endfor %}

    {% if _errors|length > 0 %}
        {% spaceless %}
        <h2>Oops! Please fix the following errors...</h2>
        <ul class="error">
            {% for error in _errors %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
        {% endspaceless %}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock drop_content %}
