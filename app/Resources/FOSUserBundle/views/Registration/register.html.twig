{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_header %}{{ 'layout.register'|trans({}, 'FOSUserBundle') }}:{% endblock %}

{% form_theme form _self theme %}

{% block form_widget %}
{% spaceless %}
    {{ block('field_rows') }}
    {{ form_rest(form) }}
{% endspaceless %}
{% endblock form_widget %}

{% block field_rows %}
{% spaceless %}
    {% for child in form %}
        {{ form_row(child) }}
    {% endfor %}
{% endspaceless %}
{% endblock field_rows %}

{% block field_row %}
{% spaceless %}
    {{ form_widget(form) }}
{% endspaceless %}
{% endblock field_row %}

{% block field_widget %}
{% spaceless %}
    {% set type = type|default('text') %}
    <input type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %} placeholder="{{ id|trans([], 'FOSUserBundle') }}..." />
{% endspaceless %}
{% endblock field_widget %}

{% block drop_content %}
    {% set _errors = [] %}

    {# Find global form errors #}
    {% for error in form.vars.errors %}
        {% set _errors = _errors|merge([error.messageTemplate|trans(error.messageParameters, 'validators')]) %}
    {% endfor %}

    {# Find field errors #}
    {% for child in form %}
        {% for error in child.vars.errors %}
            {% set _errors = _errors|merge([child.vars.id|trans({}, 'FOSUserBundle') ~ ': ' ~ error.messageTemplate|trans(error.messageParameters, 'validators')]) %}
        {% endfor %}
    {% endfor %}

    {% if _errors|length > 0 %}
        {% spaceless %}
        <h2>Woops! Please fix the following errors...</h2>
        <ul class="error">
            {% for error in _errors %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
        {% endspaceless %}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block fos_user_content %}
{% include "FOSUserBundle:Registration:register_content.html.twig" %}
{% endblock fos_user_content %}
