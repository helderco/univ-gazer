{% extends 'SiriuxGazerBundle:Admin:layout.html.twig' %}

{% block title %} User List | {{ parent() }} {% endblock %}

{% block breadcrumb %} <a class="current">User List</a> {% endblock %}

{% block body %}
<article class="module width_full">
    <header>
        <h3 class="tabs_involved">User List</h3>
        <ul class="tabs">
            <li><a href="#users">Users</a></li>
            <li><a href="#admins">Admins</a></li>
        </ul>
    </header>

    <div class="tab_container">
        <div id="users" class="tab_content">
            {% include 'SiriuxGazerBundle:Admin/User:_user_list.html.twig' with {'users': users} %}
        </div>
    </div>
    
    <div class="tab_container">
        <div id="admins" class="tab_content">
            {% include 'SiriuxGazerBundle:Admin/User:_user_list.html.twig' with {'users': admins} %}
        </div>
    </div>
    
    <footer>
        <div class="submit_link">
            <!--<a href="{{ path('users_new') }}">Add New</a>-->
            <input type="submit" value="Add New" class="alt_btn" />
        </div>
    </footer>
</article>
{% endblock %}