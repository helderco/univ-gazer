{% extends 'SiriuxGalleryBundle:Admin:__section.html.twig' %}

{% form_theme form 'SiriuxAdminBundle:Form:fields.html.twig' %}

{% block subtitle %} New {% endblock %}

{% block body %}
<form id="user_update_form" action="{{ path('admin_galleries_new') }}" method="post">
<article class="module width_full">
    <header><h3>Create new category</h3></header>
    <div class="module_content">
        {{ form_widget(form) }}
    </div>
    <footer>
        <div class="submit_link">
            <input type="submit" value="Create" class="alt_btn" />
            or <a href="{{ path('admin_galleries') }}">Cancel</a>
        </div>
    </footer>
</article>
</form>
{% endblock %}
